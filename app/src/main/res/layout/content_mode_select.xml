<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nahom.alphageek.csit_voting_app.ModeSelect"
    tools:showIn="@layout/activity_mode_select">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="338dp"
        android:layout_height="59dp"
        android:layout_marginLeft="16dp"
        android:text="እባክዎ አንዱን ይምረጡ"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.636" />

    <Button
        android:id="@+id/btnStudent"
        android:layout_width="265dp"
        android:layout_height="51dp"
        android:text="ተማሪ ነኝ"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:layout_marginRight="74dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnStaff"
        android:layout_width="266dp"
        android:layout_height="55dp"
        android:layout_marginRight="73dp"
        android:layout_marginTop="57dp"
        android:text="አስተማሪ ነኝ"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStudent" />
</android.support.constraint.ConstraintLayout>
