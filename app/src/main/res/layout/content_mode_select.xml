<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nahom.alphageek.csit_voting_app.ModeSelect"
    tools:showIn="@layout/activity_mode_select">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="338dp"
        android:layout_height="59dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="57dp"
        android:text="እባክዎ አንዱን ይምረጡ"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStudent"
        android:layout_width="265dp"
        android:layout_height="51dp"
        android:layout_marginRight="74dp"
        android:layout_marginTop="89dp"
        android:text="ተማሪ ነኝ"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <Button
        android:id="@+id/btnStaff"
        android:layout_width="266dp"
        android:layout_height="55dp"
        android:layout_marginRight="73dp"
        android:layout_marginTop="34dp"
        android:text="የስታፍ አባል ነኝ"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStudent" />

    <Button
        android:id="@+id/btnRank"
        android:layout_width="266dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="73dp"
        android:layout_marginTop="27dp"
        android:text="ደረጃ(ውጤት) ለማየት ብቻ"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStaff"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
